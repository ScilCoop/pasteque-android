<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ticket_articles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ticket_subtitle"
        android:visibility="gone" />
    <!-- Left part: ticket -->
    <include
        layout="@layout/ticket_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:layout_weight="2" />

    <!-- Right part: payment zone -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:background="@color/content2_bg"
        android:orientation="vertical"
        android:padding="20dp">
        <!-- Top zone: Payment types -->
        <Gallery
            android:id="@+id/payment_modes"
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:gravity="center"
            android:unselectedAlpha="0.5" />
        <!-- Middle zone -->
        <include
            android:id="@+id/number_pad"
            layout="@layout/numkeyboard_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_modes" />

        <ListView
            android:id="@+id/payments_list"
            style="@style/ticketLineList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ticket_remaining"
            android:layout_below="@id/payment_modes"
            android:layout_toRightOf="@id/number_pad" />
        <!-- Bottom zone -->
        <include
            layout="@layout/customer_data_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/ticket_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/give_back"
            android:layout_alignParentRight="true"
            android:text="Total : XXX.XXâ‚¬"
            android:textSize="@dimen/ticket_subtitle"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/give_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/ticket_subtitle"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Old hidden stuff -->
    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:visibility="gone">

        <Button
            android:id="@+id/btnClear"
            style="@style/button"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/btnSpacing"
            android:layout_marginLeft="@dimen/btnSpacing"
            android:layout_marginRight="@dimen/btnSpacing"
            android:onClick="clear"
            android:text="CR" />

        <Button
            android:id="@+id/btnCorrect"
            style="@style/button"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/btnSpacing"
            android:layout_marginLeft="@dimen/btnSpacing"
            android:layout_toLeftOf="@id/btnClear"
            android:onClick="correct"
            android:text="C" />

        <ImageButton
            android:id="@+id/btnPayleven"
            style="@style/button"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/btnSpacing"
            android:layout_marginLeft="@dimen/btnSpacing"
            android:layout_toLeftOf="@id/btnCorrect"
            android:onClick="sendToPayleven"
            android:src="@drawable/payleven" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/btnHeight"
            android:layout_gravity="bottom"
            android:gravity="center">

            <Button
                android:id="@+id/payment_access"
                style="@style/buttonInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/title_topmargin"
                android:text="@string/payment_details"
                android:textSize="@dimen/ticket_subtitle" />
        </LinearLayout>
    </LinearLayout>

    <SlidingDrawer
        android:id="@+id/drawer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/paymentHeader"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@id/handle"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:src="@drawable/slider_open" />

        <LinearLayout
            android:id="@id/content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/btnHeight"
                android:background="@color/content1_bg"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/payment_back"
                    style="@style/buttonImportant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/title_topmargin"
                    android:text="@string/payment_back"
                    android:textSize="@dimen/ticket_subtitle" />
            </LinearLayout>
        </LinearLayout>
    </SlidingDrawer>

</LinearLayout>