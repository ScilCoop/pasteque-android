<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="fr.pasteque.client"
      android:versionCode="4000000"
      android:versionName="4.0 beta 2">
    <application android:label="@string/app_name"
                 android:theme="@style/POSTechTheme"
                 android:icon="@drawable/launcher" >
        <activity android:name="Start"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="Password" />
        <activity android:name="OpenCash" />
        <activity android:name="TicketSelect" />
        <activity android:name="TicketInput" />
        <activity android:name="CompositionInput" />
        <activity android:name="CustomerSelect" />
        <activity android:name="TariffAreaSelect" />
        <activity android:name="ProceedPayment"
                  android:windowSoftInputMode="stateUnchanged" />
        <activity android:name="ReceiptSelect" />
        <activity android:name="CloseCash" />
        <activity android:name="Configure"
                  android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name="Debug"
                  android:theme="@android:style/Theme.NoTitleBar" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <supports-screens android:resizeable="true"
                      android:smallScreens="true"
                      android:normalScreens="true"
                      android:largeScreens="true"
                      android:anyDensity="true" />
    <uses-sdk android:minSdkVersion="3" 
              android:targetSdkVersion="5" />
</manifest> 
